<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_vacuna"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75dp"
        android:backgroundTint="@color/black"
        android:layout_margin="@dimen/dimen_2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/conejo"
                android:textColor="@color/color_del_texto"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_vacuna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/conejo"
                android:textColor="@color/color_del_texto"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/iv_fotoVacuna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:background="@color/white"

                android:src="@drawable/ic_calendario" />

            <ImageView
                android:id="@+id/iv_fotoFirma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_calendario" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
