    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_app_50"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/orange_app">



    </LinearLayout>

    <GridView
        android:id="@+id/gv_migaleria"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/dimen_90dp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/dimen_10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/dimen_10dp"
        tools:layout_editor_absoluteX="1dp"
        android:numColumns="2"


        />

</LinearLayout>